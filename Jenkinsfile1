pipeline {
    agent any
    stages {

        stage('Build') {
            steps {
                echo "Building the war"
            }
        }

        stage("Deploy to QA") {
            steps {
                echo "Deploying to QA"
            }
        }

        stage('Checkout') {
            steps {
                git url: 'https://github.com/bnchakri38/PostmanAPICollections/'
            }
        }

        stage('Pull Docker Images') {
			parallel {
				stage('Pull GoRest Workflow Image') {
					steps {
						bat 'docker pull chakri38/gorestapiworkflow:1.0'
					}
				}
				stage('Pull GoRest DataDriven Image') {
					steps {
						bat 'docker pull naveenkhunteta/gorestapidd:1.0'
					}
				}
            }
        }

        stage('Preparing Newman Results Directory') {
            steps {
                mkdir "%cd%\\newman"
            }
        }

        stage('Run API Test-Cases in Parallel') {
			parallel {
				stage('Run GoRest Workflow API Test') {
					steps {
						bat 'docker run --rm  -v %cd%/newman:/app/results chakri38/gorestapiworkflow:1.0'
					}
				}
				stage('Run GoRest DataDriven API Test'){
					steps {
						bat 'docker run --rm  -v %cd%/newman:/app/results chakri/gorestapidd:1.0'
					}
				}
			}
		}
		
		stage('Publish HTML Extra Reports') {
			parallel {
				stage('Publish GoRest Workflow Report') {
					steps {
						publishHTML([
							allowMissing: false,
							alwaysLinkToLastBuild: false,
							keepAll: true,
							reportDir: 'newman',
							reportFiles: 'gorest.html',
							reportName: 'GoRest Workflow API Report',
							reportTitles: ''
						])
					}
				}
				stage('Publish GoRest DataDrivern Report') {
					steps {
						publishHTML([
							allowMissing: false,
							alwaysLinkToLastBuild: false,
							keepAll: true,
							reportDir: 'newman',
							reportFiles: 'gorestdd.html',
							reportName: 'GoRest DataDriven API Report',
							reportTitles: ''
						])
					}
				}
			}
		}

        stage("Deploy to PROD") {
            steps {
                echo "Deploying to PROD"
            }
        }
    }
}
